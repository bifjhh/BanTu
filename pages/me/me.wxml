    <view class='me_item transpond' style='border-bottom:1px solid rgb(241,236,225);' >
        <navigator  hover-class="nav" hover-stay-time="100">
      <image src='../../image/service.png' class='left_icon' ></image>
      <button class='me_item_content' hover-class="btn-hover"  open-type="contact">联系客服</button>
      <image src='../../image/more.png' class='more'></image>
      </navigator>
    </view>
    <view class='me_item shadow'>
      <navigator url='/pages/couple/couple'  hover-class="nav" hover-stay-time="100">
      <image src='../../image/msg.png' class='left_icon' ></image>
      <button class='me_item_content' hover-class="btn-hover">反馈问题</button>
      <image src='../../image/more.png' class='more'></image>
      </navigator>
    </view>
    <view class='me_item transpond shadow'>
    <navigator  hover-class="nav" hover-stay-time="100">
      <image src='../../image/transpond.png' class='left_icon' ></image>
      <button class='me_item_content'hover-class="btn-hover" open-type="share">分享版图</button>
      <image src='../../image/more.png' class='more'></image>
      </navigator>
    </view>
