<view class='box' bindtouchstart='move_start' bindtouchend='move_end' bindtap='add_hidden'>
<!--我的图像  -->
  <view class='cover'>
    <image src='{{avatarUrl}}'></image>
    <view class='user_name'>{{nickName}}</view>
  </view>
  <!--列表  -->
  <view class='wrap_me'>
    <view class='me_item shadow'>
     <navigator url='../my_cardList/my_cardList' hover-class="nav" hover-stay-time="100">
      <image src='../../image/mee.png' class='left_icon' ></image>
      <button class='me_item_content' hover-class="btn-hover">我的名片</button>
      <image src='../../image/more.png' class='more'></image>
      </navigator>
    </view>
