/* pages/details/details.wxss */

page {
    background-color: #f1ece1;
}

.wrap {
    width: 100%;
    padding-bottom: 60rpx;
    display: none;
}

.template_img {
    width: 700rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    height: 400rpx;
    background: url("http://192.168.2.115:8080/bantu/images/bg/bgcard5.png") no-repeat center;
    background-size:100% 100%;
    position: relative;
    border-radius: 20rpx;
    
}
.t-box{
    margin-top: 40rpx;
    box-shadow: 0 1px 1px 1px #cecec1;
    
}

.title {
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 0.9rem;
    letter-spacing: 6rpx;
    color: #fff;
}

.card_name {
    letter-spacing: 6rpx;
    width: 162rpx;
    height: 80rpx;
    text-align: left;
    color: #000;
    font-size: 1.28rem;
    position: absolute;
    left: 50rpx;
    top: 161rpx;
}

.technical {
    width: 60%;
    height: 106rpx;
    position: absolute;
    right: 33rpx;
    top: 161rpx;
    font-size: 0.7rem;
    color: #000;
    /* overflow: hidden; */
}

.phone {
    width: 340rpx;
    height: 60rpx;
    line-height: 60rpx;
    position: absolute;
    bottom: 68rpx;
    left: 62rpx;
    color: #000;
    font-size: .8rem;
}

.phone text {
    letter-spacing: 5rpx;
}

.text {
    width: 700rpx;
    margin: 0 auto;
    margin-top: 25rpx;
}

.text>view {
    box-sizing: border-box;
}

