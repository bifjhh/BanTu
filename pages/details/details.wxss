/* pages/details/details.wxss */
page{
    background-color:#f1ece1;
}
.wrap{
    width: 100%; 
    padding-bottom:125rpx;
    padding-top:20rpx;

}
.template_img{
    width: 100%;
    padding-top: 20rpx;
    height: 430rpx;
     background-image: url("https://www.fmlcfs.top/BT/bg_img/template_bg.png");
    background-position: center;
    background-size: 750rpx 430rpx;
    background-repeat: no-repeat;
    position: relative;
}
.title{
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 0.9rem;
    letter-spacing:6rpx;
    color: #fff;
}
.card_name{
    letter-spacing:6rpx;
    width:162rpx;
    height:80rpx;
    text-align: left;
    color: #000;
    font-size:1.28rem;
    position:absolute;
    left:50rpx;
    top:161rpx;

}
.technical{
    width:60%;
    height: 106rpx;
    position: absolute;
    right:33rpx;
    top:161rpx;

    font-size:0.7rem;
    color:#000;
    /* overflow: hidden; */
}
.phone{
    width:340rpx;
    height:60rpx;
    line-height: 60rpx;
    position:absolute;
    bottom:68rpx;
    left:62rpx;
    color:#000;
    font-size:.8rem;
}
.phone text{
    letter-spacing: 5rpx;
}
.text{
    width: 700rpx;
    margin: 0 auto;
    margin-top:40rpx;
}
.text_item{
  /* width: 696rpx; */
  height: 110rpx;
  line-height: 110rpx;
  padding-left:27rpx;
  padding-right:27rpx;
  background-color:#fff; 
  color: #000;
  font-size: 0.95rem;
  border-bottom: 1rpx solid #d3d5cd;
  overflow: hidden;
  /* box-sizing: border-box; */
}
.text_item_last{
  line-height: 63rpx;
  padding-left:27rpx;
  padding-right:27rpx;
  background-color:#fff; 
  color: #000;
  font-size: 0.95rem;
  border-bottom: 1rpx solid #d3d5cd;
}
.text_item_last view{
  text-indent: 57rpx;
  line-height: 50rpx;
}
.shaow{
  border-bottom: none;
  box-shadow: 2px 1px 1px 1px #cecec1;
}
.top{
  margin-top: 25rpx;
}
.big_item{
  height: auto;
  line-height: 45rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.set_card{
background-color:#6b5a4b;
color:#fff;
margin-top:60rpx;
font-size:0.97rem;

width:700rpx;

}
